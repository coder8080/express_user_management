<%- include('blocks/head.ejs', {header: 'registration in eum system'}) %>
<body>
<div class="container text-center">
    <h1>Create new account in EUM system</h1>
    <hr>
    <form action="/reg" method="post" class="mt-2">
        <div class="form-group">
            <label for="login">Login</label>
            <input type="text" class="form-control" id="login" name="login" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name='password' id="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        <h6 class="mt-2"><a href="/login">Already have an account? Login</a></h6>
    </form>
</div>
</body>
</html>
